
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Admin/dist/css/alt/adminlogin.css" />
    <link rel="stylesheet" href="~/User/css/loopple/loopple.css" />

    @model Flower.Areas.Admin.Models.Emloyee
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 login-box">
                <div class="col-lg-12 login-title">
                    Sign Up
                </div>
                <div class="col-lg-12 login-form">
                    <form method="post" asp-controller="account" asp-action="register">
                        <div class="form-group">
                            <label class="form-control-label">Username</label>
                            <input type="text" asp-for="Username" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Username" class="error"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-control-label">Email</label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="error"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-control-label">Age</label>
                            <input type="text" asp-for="Age" class="form-control" placeholder="Age" />
                            <span asp-validation-for="Age" class="error"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">Password</label>
                            <input type="text" asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="error"></span>
                        </div>
                        <input style="text-transform: uppercase;" type="submit" value="Submit" />

                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

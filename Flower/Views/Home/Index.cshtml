                    <div class="card">
                        <div class="card-header p-0 mx-3 mt-3 position-relative z-index-1">
                            <a asp-controller="home" asp-action="details" asp-route-id="@product.Id" class="d-block">
                                <img src="~/upload/@product.Photo" class="img-fluid border-radius-lg shadow">
                            </a>
                        </div>

                        <div class="card-body pt-3">
                            <div class="d-flex align-items-center">
                                <div>
                                    <span class="text-sm">Flower</span>
                                    <h6 style="color:tomato" class="card-description font-weight-bolder mb-4">
                                        @product.Name
                                    </h6>

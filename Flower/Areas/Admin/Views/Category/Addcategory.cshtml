@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model Flower.Models.Category
<form method="post" asp-controller="category" asp-action="addcategory" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12 ml-5 m-5">
            <h1 style="color:tomato">New Category </h1>
            <div class="row">
                <div class="col-md-6">
                    <p>Name Category</p>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="col-md-6"></div>
            </div>
            <div class="row mt-5">
                <div class="col-md-3">
                    <p>Status</p>
                    <input type="checkbox" asp-for="Status" checked />
                </div>
                <div class="col-md-3">
                    <button type="submit" value="upload" class="btn btn-primary">Add Category</button>
                    <label></label>
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-3"></div>
            </div>
            @TempData["msg"]
             
        </div>
    </div>
</form>
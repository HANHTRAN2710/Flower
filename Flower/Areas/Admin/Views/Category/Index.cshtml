@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<fieldset>
    <legend>
        Search By Keyword
    </legend>
    <form method="get" asp-controller="category" asp-action="searchByKeywordPagination">
       <input type="text" name="keyword" value="@ViewBag.keyword" />
        <input type="submit" value="Search" />
    </form>
</fieldset>
<div class="row">

    <div class="col-md-12 ml-5 m-5 ">
        <h1 class="mb-5" style="color:tomato">View Category </h1>
       
            <div class="row">
              
                    <table class="table  table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Edit</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                    @foreach (var category in ViewBag.categories)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>@category.Name</td>
                                    <td><a asp-controller="category" asp-action="edit" asp-route-id="@category.Id">Edit</a></td>
                                    <td>@(category.Status ? "show" : "hide")</td>

                                </tr>
                            }
                        </tbody>
                       
                    </table>

            </div>


    
    </div>
</div>